@{
    ViewBag.Title = "Manage Student Meal Plans";
}

<!DOCTYPE html>
<html>
<head>
    <title>Manage Student Meal Plans</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .main-container {
            margin-top: 50px;
        }

        .card {
            margin: 20px 0;
        }
    </style>
</head>
<body>
    <div class="container main-container">
        <div class="text-center">
            <h1 class="display-4">Manage Student Meal Plans</h1>
            <p class="lead">Create, edit, and view student meal plans efficiently!</p>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Student Meal Plans</h5>
                        <p class="card-text">View all student meal plans.</p>
                        <a href="@Url.Action("List", "StudentMealPlan")" class="btn btn-primary">View Student Meal Plans</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Create New Student Meal Plan</h5>
                        <p class="card-text">Create a new student meal plan.</p>
                        <a href="@Url.Action("New", "StudentMealPlan")" class="btn btn-primary">Create New Student Meal Plan</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
