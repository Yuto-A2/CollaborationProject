@model Test.Models.ViewModels.DetailsStudentMealPlan
@{
    ViewBag.Title = "Details StudentMealPlan";
}

<h2>Show Student Meal Plan</h2>
<p><a href="/StudentMealPlan/List">Go back to List</a></p>
<p><a href="/StudentMealPlan/Edit/@Model.SelectedStudentMealPlan.student_meal_plan_id"></a></p>
<p>First name: @Model.SelectedStudentMealPlan.first_name</p>
<p>Last name: @Model.SelectedStudentMealPlan.last_name</p>
<p>Meal plan: @Model.SelectedStudentMealPlan.plan_name</p>

<div>
    @{
    string imageurl = "/Content/Images/StudentMealPlan/default.jpg";
if (Model.SelectedStudentMealPlan.StudentMealPlanHasPic){
imageurl = "/Content/Images/StudentMealPlan" + Model.SelectedStudentMealPlan.StudentMealPlanID + "."+ Model.SelectedStudentMealPlan.PicExtension;
}}
</div>

<div>
    <img style="display:block; max-width:100%;" alt="@Model.SelectedStudentMealPlan.first_name" src="@imageurl"/>
</div>







