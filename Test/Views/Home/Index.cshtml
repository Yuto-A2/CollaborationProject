@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>Recipe Manager Home</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .main-container {
            margin-top: 50px;
        }

        .card {
            margin: 20px 0;
        }
    </style>
</head>
<body>
    <div class="container main-container">
        <div class="text-center">
            <h1 class="display-4">Recipe Manager</h1>
            <p class="lead">Let's manage students' meals efficiently!</p>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Manage Students</h5>
                        <p class="card-text">Add, edit, and view students enrolled in meal plans.</p>
                        <a href="@Url.Action("Index", "Student")" class="btn btn-primary">Manage Students</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Manage Teachers</h5>
                        <p class="card-text">Add, edit, and view teachers enrolled in meal plans.</p>
                        <a href="@Url.Action("Index", "Teacher")" class="btn btn-primary">Manage Teachers</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Manage Meal Plans</h5>
                        <p class="card-text">Create and manage meal plans for students and teachers.</p>
                        <a href="@Url.Action("Index", "MealPlan")" class="btn btn-primary">Manage Meal Plans</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">View Exercises</h5>
                        <p class="card-text">View exercises recommended for different meal plans.</p>
                        <a href="@Url.Action("Index", "Exercise")" class="btn btn-primary">View Exercises</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">View Recipes</h5>
                        <p class="card-text">Browse and manage recipes included in meal plans.</p>
                        <a href="@Url.Action("Index", "Recipe")" class="btn btn-primary">View Recipes</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Add Reminder Notes</h5>
                        <p class="card-text">Add notes for students or teachers with food allergies.</p>
                        <a href="@Url.Action("Index", "ReminderNote")" class="btn btn-primary">Add Reminder Notes</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
