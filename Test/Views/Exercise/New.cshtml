@model IEnumerable<Test.Models.Muscle>
@{
    ViewBag.Title = "Add Exercise";
}

<h2>New Exercise</h2>
<form action="/Exercise/Create" method="POST">
    <div>
        <label>Exercise Name:</label> <input type="text" name="ExerciseName" />
    </div>
    <div>
        <label>Exercise Description:</label> <input type="text" name="ExerciseDescription" />
    </div>
    <div>
        <label>Exercise Weight (optional):</label> <input type="number" name="ExerciseWeight" />
    </div>
    <div>
        <label>Muscle group:</label>
        <select name="MuscleId">
            @foreach (var muscle in Model)
            {
                <option value="@muscle.MuscleId">@muscle.GroupName</option>
            }
        </select>
    </div>
    <div>
        <input type="submit" value="Add Exercise" />
    </div>
</form>