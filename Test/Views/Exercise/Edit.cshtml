@model Test.Models.ViewModels.UpdateExercise

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Exercise</h2>

<form method="POST" action="/Exercise/Update/@Model.Exercise.ExerciseId">
    <input type="text" style="display:none;" name="ExerciseId" value="@Model.Exercise.ExerciseId" />
    <div>
        <label>Name</label>
        <input type="text" name="ExerciseName" value="@Model.Exercise.ExerciseName" />
    </div>
    <div>
        <label>Description</label>
        <input type="text" name="ExerciseDescription" value="@Model.Exercise.ExerciseDescription" />
    </div>
    <div>
        <label>Muscle group:</label>
        <select name="MuscleId">
            @foreach (var muscle in Model.MuscleOptions)
            {
                <option value="@muscle.MuscleId">@muscle.GroupName</option>
            }
        </select>
    </div>

    <div>
        <input type="submit" value="Update" />
    </div>

</form>