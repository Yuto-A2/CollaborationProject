﻿@model Test.Models.StudentDto
@{
    ViewBag.Title = "Edit";
}

<h2>Update Student</h2>
<form action="/Student/Update/@Model.student_id" method="POST">
    <div style="display:none;">
        @*Pass through the student ID*@
        <input type="text" name="student_id" value="@Model.student_id" />
    </div>
    <div>
        <label>First Name:</label> <input type="text" name="first_name" value="@Model.first_name" />
    </div>
    <div>
        <label>Last Name:</label> <input type="text" name="last_name" value="@Model.last_name" />
    </div>
    <div>
        <input type="submit" value="Upadate Student" />
    </div>
</form>