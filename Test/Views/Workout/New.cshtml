@model IEnumerable<Test.Models.Exercise>
@{
    ViewBag.Title = "Add Workout";
}

<h2>Create Workout</h2>

<form action="/Workout/Create" method="POST">
    <div>
        <label>Date:</label><input type="date" name="WorkoutDate" />
    </div>

    @* add functionality to add the weights used for the exercises *@
    <div>
        <label>Exercise:</label>
        <select name="ExerciseId">
            @foreach (var exercise in Model)
            {
                <option value="@exercise.ExerciseId">@exercise.ExerciseName</option>
            }
        </select>
    </div>
    <div>
        <input type="submit" value="Add workout" />
    </div>
</form>