@model Test.Models.WorkoutDto
@{
    ViewBag.Title = "Edit";
}

<h2>Update Workout</h2>

<form method="POST" action="/Workout/Update/@Model.WorkoutId">
    <input type="text" style="display:none;" name="WorkoutId" value="@Model.WorkoutId" />
    <div>
        <label>Workout Date</label>
        <input type="date" name="WorkoutDate" value="@Model.WorkoutDate.ToString("D")" />
    </div>
    <div>
        <input type="submit" value="Update" />
    </div>
</form>
